body
  background: white
  font-size:13px
  text-shadow:0 1px 0 white

header
  width:100%
  height:50px
  background:#3da0c0
  border-bottom:4px solid #368fab
  hgroup
    height:100%
    display:inline-block
    width:300px
    h1, h2
      font-size:14px
      line-height:50px
      color:#fff
      text-shadow:0 1px 0 #368fab
      display:inline-block
    h2
      font-weight:normal
      margin-left:6px
  nav
    height:100%;
    display:inline-block;
    width:640px
    ul
      list-style-type:none
      li
        display:inline-block
        line-height:50px
        padding:0 5px 
        margin-right:20px
        a
          text-shadow:0 1px 0 #368fab
          line-height:38px
          color:lighten(#3da0c0, 80%)
          font-weight:bold
          &:hover
            color:white
            text-decoration: none
        &.active a
          color:white

#main 
  margin-top:20px
  h1
    font-size:13px
    width:100%
    border-bottom:1px solid #E5E5E5
    line-height:20px
    margin-bottom:20px
    color:#2B3632
  h2
    font-size:12px
    line-height:20px
    color:#2B3632

  .avatar
    width:20px
    height:20px
    display:inline-block
    border-radius:10px
    line-height:30px
    margin-right:10px
    box-shadow:0 1px 0 white

  .content
    form
      .possibility
        margin-bottom:5px
      .help-block
        margin-top:0
  .sidebar
    .user
      height:30px
      width:240px
      line-height:30px
      p
        height:20px
        width:190px
        display:inline-block

footer
  text-align:center
  font-size: 85%
  margin:20px
  color:#999
  a
    color:#67686D
    text-decoration:underline
    &:hover
      color:#070000

a
  color:#368fab
  text-shadow:0 1px 0 white
  